<div id="col_izq"><div id="window1">
	<div id="title1"><p>Administration of Users:</p></div>

<table cellspacing="1" cellpadding="1" id="tabla1">
  <tr>
    <th class="col1">Action</th>
    <th class="col1">User</th>
    <th class="col1">Email</th>
  </tr>
		<% for user in @users %>
		  <tr>
			<% if ((current_user.login == "admin") || (current_user.login == user.login) || (current_user.login == "superadmin") ) %>
				<td class="row1"><%= link_to 'Edit', edit_user_path(user) %> | <%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %><%- end -%>
				</td>
		    <td class="row1"><%=h user.login %></td>
		    <td class="row1"><%=h user.email %></td>
		  </tr>
		<% end %>
		</table>
	</div>
</div>


